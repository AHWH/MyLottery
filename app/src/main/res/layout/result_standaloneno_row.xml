    <TextView
        android:id="@+id/standaloneNo_row_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:text="1234"
        android:textSize="20sp"
        android:textColor="#333"
        android:textStyle="bold"/>
