<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">

        <include
            android:id="@+id/standalonenos_firstPrize"
            layout="@layout/result_standaloneno_row"
            android:layout_width="0dp"
            android:layout_weight="5.5"
            android:layout_height="wrap_content" />


        <ImageView
            android:id="@+id/divider1"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:layout_weight="0.1"
            android:layout_toEndOf="@+id/standalonenos_firstPrize"
            app:srcCompat="@drawable/vertical_divider" />

        <include
            layout="@layout/result_standaloneno_row"
            android:id="@+id/standalonenos_secondPrize"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5.5"
            android:layout_toEndOf="@+id/divider1"/>

        <ImageView
            android:id="@+id/divider2"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:layout_weight="0.1"
            android:layout_toEndOf="@+id/standalonenos_secondPrize"
            app:srcCompat="@drawable/vertical_divider" />

        <include
            layout="@layout/result_standaloneno_row"
            android:id="@+id/standalonenos_thirdPrize"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5.5"
            android:layout_toEndOf="@+id/divider2"/>


    </LinearLayout>



</android.support.v7.widget.CardView>