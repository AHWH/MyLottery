<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/results_layout_new_relayout"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="#fff">

    <LinearLayout
        android:id="@+id/results_layout_new_dateday_lineLayout"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/results_layout_new_dateday_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30"
            android:textSize="30sp"
            android:textColor="@color/textAlt"/>

        <TextView
            android:id="@+id/results_layout_new_dateday_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="THU"
            android:textColor="@color/textPrimaryShade1"
            android:textSize="15sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/results_layout_new_results_lineLayout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_toEndOf="@+id/results_layout_new_dateday_lineLayout"
        android:layout_toStartOf="@+id/results_layout_new_arrow_lineLayout"
        android:gravity="start|center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/results_layout_new_results_drawNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="Draw No. 8888"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/textAlt"/>

        <TextView
            android:id="@+id/results_layout_new_results_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="First Prize: $1,100,888"
            android:textColor="@color/textPrimaryShade1"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/results_layout_new_results_second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Winning Numbers: 4 | 8 | 24 ..."
            android:textColor="@color/textPrimaryShade1"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/results_layout_new_results_third"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Additional Winning Number: 8"
            android:textColor="@color/textPrimaryShade1"
            android:textSize="15sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/results_layout_new_arrow_lineLayout"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:gravity="start|center_vertical"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/results_layout_new_arrow_arrow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_results_arrow_right"
            android:tint="@color/textPrimaryShade1"/>
    </LinearLayout>

</RelativeLayout>