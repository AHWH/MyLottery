<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/esults_layout_normal_relayout"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="#fff">
    

    <LinearLayout
        android:id="@+id/results_layout_normal_dateday_lineLayout"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/results_layout_normal_dateday_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30"
            android:textAlignment="center"
            android:textColor="@color/textAlt"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/results_layout_normal_dateday_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="THU"
            android:textAlignment="center"
            android:textColor="@color/textPrimaryShade1"
            android:textSize="15sp" />
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/results_layout_normal_results_lineLayout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_toEndOf="@+id/results_layout_normal_dateday_lineLayout"
        android:layout_toStartOf="@+id/results_layout_normal_arrow_lineLayout"
        android:gravity="start|center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/results_layout_normal_results_drawNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="Draw No. 8888"
            android:textAlignment="viewStart"
            android:textStyle="bold"
            android:textColor="@color/textAlt"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/results_layout_normal_results_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="First Prize: 8887"
            android:textAlignment="viewStart"
            android:textColor="@color/textPrimaryShade1"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/results_layout_normal_arrow_lineLayout"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:gravity="start|center_vertical"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/results_layout_normal_arrow_arrow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_results_arrow_right"
            android:tint="@color/textPrimaryShade1"/>
    </LinearLayout>
    
</RelativeLayout>